<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:layout_margin="10dp"
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <TextView
        android:id="@+id/download"
        android:textColor="@color/brown"
        android:text="下载"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/video_xiazai"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:id="@+id/jc_volume"
        android:src="@drawable/jc_add_volume"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="28dp"
        />
</RelativeLayout>
<TextView
    android:background="@color/bg_gray"
    android:layout_width="match_parent"
    android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/repost_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/fenxiang_baoxiaowangzhe" />

            <TextView
                android:id="@+id/repost_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/like_video_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/zan_baoxiaowangzhe" />

            <TextView
                android:id="@+id/like_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/home_pinlun" />

            <TextView
                android:id="@+id/comment_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                 />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_gray"
        />
</LinearLayout>