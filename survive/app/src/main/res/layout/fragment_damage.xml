<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/qiaingzhidaquan_zongxiaoguo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="威力"
                        android:textColor="@color/black" />

                    <ProgressBar
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:progressDrawable="@drawable/gun_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/power_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progress="0"
                        android:minHeight="10dp"
                        android:maxHeight="10dp"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/power_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="射程"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <ProgressBar
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:progressDrawable="@drawable/gun_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/range_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progress="0"
                        android:minHeight="10dp"
                        android:maxHeight="10dp"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/range_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="稳定性"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <ProgressBar
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:progressDrawable="@drawable/gun_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/stable_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progress="0"
                        android:minHeight="10dp"
                        android:maxHeight="10dp"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:id="@+id/stable_num"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="射速"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <ProgressBar
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:progressDrawable="@drawable/gun_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/speed_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:progress="0"
                        android:minHeight="10dp"
                        android:maxHeight="10dp"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/speed_num"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/divider_gray"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/qiaingzhidaquan_shanghaiduibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:paddingLeft="15dp"
                android:drawableLeft="@mipmap/red"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="一枪击倒"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/juse"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="两枪击倒"
                android:textColor="@color/black" />

            <TextView
                android:paddingLeft="15dp"
                android:drawableLeft="@mipmap/lanse"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="三枪击倒"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:paddingLeft="12dp"
                android:drawableLeft="@mipmap/huise"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="更多击倒"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/divider_gray"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="武器"
                android:gravity="center"
                />
            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/divider_gray"
                >
            </View>
            <TextView
                android:gravity="center"
                android:text="射击身体"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                />
            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/divider_gray"
                >
            </View>
            <TextView
                android:gravity="center"
                android:text="射击头部"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/divider_gray"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></LinearLayout>
            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/divider_gray"
                >
            </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="裸"
                    android:textSize="13sp"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="1级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="2级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="3级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/divider_gray"
                >
            </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="裸"
                    android:textSize="13sp"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="1级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="2级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray"
                    >
                </View>
                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="3级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/divider_gray"
            ></View>
        <TableLayout
            android:id="@+id/tablelayout_damage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"/>
    </LinearLayout>

</ScrollView>