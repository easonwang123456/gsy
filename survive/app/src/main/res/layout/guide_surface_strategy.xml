<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/high_light"
        android:layout_marginTop="235dp"
        android:background="@color/bg_gray_pressed"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/battle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:padding="10dp"
                android:id="@+id/mix_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/hy_dixing"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/gun_strategy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:id="@+id/creation_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/hy_qiangxie" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chicken"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:padding="10dp"
                android:id="@+id/survive_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/hy_chiji" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginLeft="100dp"
        android:layout_marginTop="320dp"
        android:src="@mipmap/gonglueye_yingdao"
        android:layout_width="200dp"
        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/ok"
        android:src="@drawable/wozhidaol"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="430dp"
        android:layout_width="100dp"
        android:layout_height="50dp" />
</RelativeLayout>