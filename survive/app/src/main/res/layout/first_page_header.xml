<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
       <cn.bingoogolapple.bgabanner.BGABanner
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="3"
           android:id="@+id/banner_splash_pager"
           app:banner_pageChangeDuration="1000"
           app:banner_pointAutoPlayAble="true"
           app:banner_pointContainerBackground="@android:color/transparent"
           app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
           app:banner_pointTopBottomMargin="5dp"
           app:banner_transitionEffect="defaultEffect" >
       </cn.bingoogolapple.bgabanner.BGABanner>
       <LinearLayout
           android:id="@+id/high_light"
           android:background="@color/bg_gray_pressed"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1.8"
           android:orientation="horizontal">
              <LinearLayout
                  android:id="@+id/rookie_guide"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  >
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="3"
                         >
                            <ImageView
                                android:padding="12dp"
                                android:id="@+id/rookie_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/hy_home_xinshouzhilan"
                                android:layout_gravity="center_horizontal"
                                />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="center_horizontal"
                         >
                            <TextView
                                android:id="@+id/rookie_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center_horizontal"
                                android:text="新手指南"
                                android:gravity="center_horizontal"
                                />
                     </LinearLayout>


              </LinearLayout>
              <LinearLayout
                  android:id="@+id/video_details"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="3"
                       >

                          <ImageView
                              android:id="@+id/video_iv"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_gravity="center_horizontal"
                              android:padding="12dp"
                              android:src="@mipmap/hy_home_shipin" />

                   </LinearLayout>
                     <LinearLayout
                         android:gravity="center"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         >
                            <TextView
                                android:id="@+id/video_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center_horizontal"
                                android:text="视频讲解"
                                android:gravity="center_horizontal"
                                />
                     </LinearLayout>


              </LinearLayout>
              <LinearLayout
                  android:id="@+id/gun_list"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:orientation="vertical"

                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="3"
                      >

                         <ImageView
                             android:id="@+id/gun_iv"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_gravity="center_horizontal"
                             android:padding="12dp"
                             android:src="@mipmap/hy_home_qiangji" />
                  </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         >
                            <TextView
                                android:id="@+id/gun_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="枪械大全"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"

                                />
                     </LinearLayout>


              </LinearLayout>
              <LinearLayout
                  android:id="@+id/facility"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  >
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="3"
                         >

                         <ImageView
                             android:id="@+id/facility_iv"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_gravity="center_horizontal"
                             android:padding="12dp"
                             android:src="@mipmap/hy_home_xinshouzhilan" />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="center_horizontal"
                         >

                         <TextView
                             android:id="@+id/facility_tv"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center_horizontal"
                             android:gravity="center_horizontal"
                             android:text="物品装备"
                             android:textSize="14sp" />
                     </LinearLayout>


              </LinearLayout>
       </LinearLayout>
</LinearLayout>


